<!doctype html>
<html lang="en">
  <head>
    <title>Football - Live Scores</title>

    <%- include('partials/tags.ejs') %>
  </head>
  <body>
    <%- include('partials/navbar.ejs') %>

    <!-- Heading -->
    <section>
      <div class="container">
        <div class="row">
          <div class="col text-center">
            <% if(locals.heading) %>
            <h3 class="text-capitalize"><%= locals.heading %></h3>
          </div>
        </div>
      </div>
    </section>
    <!-- Heading -->

    <section>
      <div class="container">
        <div class="row">
          <div class="col">
            <% for(var i = 0; i < response.length; i++) { %>
              <p><%= response.result[i] %></p>
            <% } %>
          </div>
        </div>
      </div>
    </section>

    <%- include('partials/footer.ejs') %>

    <%- include('partials/scripts.ejs') %>
  </body>
</html>