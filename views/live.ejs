<!doctype html>
<html lang="en">
  <head>
    <title>Live Scores</title>

    <%- include('partials/tags.ejs') %>
  </head>
  <body>
    <%- include('partials/navbar.ejs') %>

    <!-- Heading -->
    <section>
      <div class="container">
        <div class="row">
          <div class="col text-center">
            <% if(locals.sport) %>
            <h3 class="text-capitalize">Live <%= locals.sport %> Scores</h3>
          </div>
        </div>
      </div>
    </section>
    <!-- Heading -->

    <div class="pb-2"></div>

    <% if(locals.sport == 'football') { %>
      <%- include('partials/live/live-football.ejs') %>
    <% } %>
    <% if(locals.sport == 'cricket') { %>
      <%- include('partials/live/live-cricket.ejs') %>
    <% } %>

    <%- include('partials/footer.ejs') %>

    <%- include('partials/scripts.ejs') %>
  </body>
</html>